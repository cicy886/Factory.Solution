@model Factory.Models.Machine

<h4>Add a new Machine</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@type="text", required ="required"})
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description, new {@type="text", required ="required"})
  @Html.LabelFor(model => model.SerialNumber)
  @Html.TextBoxFor(model => model.SerialNumber, new {@type="text", required ="required"})
  @Html.LabelFor(model => model.Date)
  @Html.TextBoxFor(model => model.Date, new {@type="number", required ="required"})

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Add new machine" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all machines", "Index")</p>